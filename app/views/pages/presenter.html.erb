


<div class="h-100 d-flex justify-content-center">

    <div class="card align-self-center w-100">
        <h5 class="card-header special-color-dark white-text py-4">
			<strong>Hello </strong>
		</h5>
        <div class="card-body">
            
            <%= current_user.name %><br>
            <%= current_user.email %><br>
            <%= link_to "Log Out", logout_path %><br><br>

			<br/>

            <h5 class="card-title">Create Room</h5>
            <!-- Default inline form -->
            <%= form_with(url: "/rooms", local: true, method: "post", :html => {:class => "form-inline"}) do %>
                
                <label class="sr-only" for="newRoomNameInput">Room Name</label>
                <div class="input-group mb-2 mr-sm-2">
                    <input type="text" class="form-control py-0" name="room_name" id="newRoomNameInput" placeholder="room name">
                </div>

                <button type="submit" class="btn btn-primary btn-md mt-0">Create</button>
            <% end %>
                
            <br/>
            <!-- Default inline form -->


            <h5 class="card-title">Your Rooms</h5>

            
            <ul class="list-group">
            <% @rooms.each do |room| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= room.name %>
                    <a href="/rooms/<%= room.name %>" class="btn btn-mdb-color btn-sm m-0" style="box-shadow:none;">Join</a>
                </li>
            <% end %>
            </ul>

        </div>
    </div>

</div>



